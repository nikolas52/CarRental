@page
@model Wypozyczalnia.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
                <div class="form-group">
                    <label asp-for="Input.Imie" class="form-label"></label>
                    <input asp-for="Input.Imie" class="form-control" />
                    <span asp-validation-for="Input.Imie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Nazwisko" class="form-label"></label>
                    <input asp-for="Input.Nazwisko" class="form-control" />
                    <span asp-validation-for="Input.Nazwisko" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Zarejestruj</button>
                <p class="text-center mt-3">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Masz konto? Zaloguj się</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}