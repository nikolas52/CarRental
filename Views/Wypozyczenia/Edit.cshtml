@model Wypozyczalnia.Models.Wypozyczenie

@{
    ViewData["Title"] = "Edytuj wypożyczenie";
}

<h2>Edytuj wypożyczenie</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="IdWypozyczenia" />
    <div class="form-group">
        <label asp-for="IdKlienta" class="control-label">Klient</label>
        <select asp-for="IdKlienta" class="form-control" asp-items="@(new SelectList(ViewBag.Klienci, "IdKlienta", "FullName"))">
            <option value="">Wybierz klienta</option>
        </select>
        <span asp-validation-for="IdKlienta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdSamochodu" class="control-label">Samochód</label>
        <select asp-for="IdSamochodu" class="form-control" asp-items="@(new SelectList(ViewBag.Samochody, "IdSamochodu", "FullName"))">
            <option value="">Wybierz samochód</option>
        </select>
        <span asp-validation-for="IdSamochodu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataRozpoczecia" class="control-label"></label>
        <input asp-for="DataRozpoczecia" class="form-control" type="date" />
        <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataZakonczenia" class="control-label"></label>
        <input asp-for="DataZakonczenia" class="form-control" type="date" />
        <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kwota" class="control-label"></label>
        <input asp-for="Kwota" class="form-control" type="number" />
        <span asp-validation-for="Kwota" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}